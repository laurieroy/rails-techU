<div class="row sign-up-form">
	<div class="col s6 m6">
		<div class="card blue-grey darken-1">
			<div class="card-content white-text">
				<span class="card-title">Name: <%= @student.first_name %> <%= @student.last_name %> </span>
				<p>Email: <%= @student.email %></p>
			</div>
		</div>
		<%= link_to '<i class="material-icons right">mode_edit</i>Edit your profile'.html_safe, 
			edit_student_path(@student), class: "waves-effect deep-orange darken-4 btn" %>
	</div>
</div>